{% extends 'base.html.twig' %}
{% block title %}Les jeux de la communauté!{% endblock %}

{% block body %}<div class="container-fluid text-center">
    {% set coffre = serviceInventaire.inventaireObject(app.session, Constantes.coffre) %}
    {% set crane = serviceInventaire.inventaireObject(app.session, Constantes.crane) %}

    <div class="container text-center">
        {% if alert == 1 %}
            <div class="alert alert-danger" role="alert">
                ECHEC, essayez encore !
            </div>
        {% endif %}
        {% if alert == 22546569 %}
            <div class="alert alert-success" role="alert">
                Bien joué, tu as compris l'énigme !

                <a href="{{ path('app_catacombe_deux_traverser') }}">
                    Traverser la porte
                </a>
            </div>
        {% endif %}
        <div class="row">
            <div class="col">
                {% if crane and coffre %}
                    <p>En appuyant sur l'étoile, vous activez un passage secret qui mène à une porte ...</p>
                    <img src="{{ asset('images/portetoile_ouverte.webp') }}" alt="La porte des étoiles" >

                {% else %}
                    <p>Il vous manque des objets</p>
                    <img src="{{ asset('images/portetoile_ferme.webp') }}" alt="La porte des étoiles" >
                {% endif %}
                {%  include 'JeuCommunaute/catacombe/_revenir_entree_catacombe.html.twig' %}

            </div>
            <div class="col">
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
            <div class="col">
                {% include 'JeuCommunaute/menu/_menu.html.twig' %}
            </div>
        </div>
    </div>
    </div>
{% endblock %}
