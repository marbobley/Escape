{% extends 'base.html.twig' %}

{% block title %}Les jeux de la communauté!{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        <article>
            <h1>Vous trouvez une clef</h1>
            <img class="img-fluid" src="{{ asset('images/clef-33.webp')}}" alt="clef avec marqué 33 dessus" width="200" >
            {% include 'communaute-jeu/_deuxieme-pierre.html.twig' %}
            <div>
                {% set clef4 = serviceInventaire.inventaireObject(app.session, 'clef-4') %}
                {% if clef4 %}
                    <img class="img-fluid"
                         src="{{ asset('images/premier_niveau_sans_premiere_deuxieme_pierre.webp') }}"
                         alt="photo d'un trou, avec de vieilles pierres represantant le premier niveau"
                         usemap="#workmap">
                {% else %}
                    <img class="img-fluid"
                         src="{{ asset('images/premier_niveau_sans_premiere_pierre.webp') }}"
                         alt="photo d'un trou, avec de vieilles pierres represantant le premier niveau"
                         usemap="#workmap">
                {% endif %}
                <map name="workmap">
                    <area shape="rect" coords="665,428,730,513"
                          alt="Ouvrir la porte"
                          data-bs-toggle="offcanvas"
                          href="#deuxiemePierreOffCanvas"
                          role="button"
                          aria-controls="deuxiemePierreOffCanvas">
                </map>
            </div>
            <!--Même ici !-->
        </article>

    </div>

{% endblock %}
