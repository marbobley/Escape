{% extends 'base.html.twig' %}

{% block title %}Les jeux de la communaut√©!{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        {% include 'escalier/_passage-sous-escalier.html.twig' %}
        {% include 'escalier/_passage-escalier.html.twig' %}
            <div class="container text-center">
                <div class="row">
                    <div class="col">
                        <img class="img-fluid"
                                          src="{{ asset('images/l-escalier-a-vis-du-donjon.webp') }}"
                                          alt="photo d'un escalier, avec de vieilles pierres represantant le passage vers le niveau suivante"
                                          usemap="#workmap">

                        <map name="workmap">
                            <area shape="rect" coords="133,639,280,830"
                                  alt="Sous l'escalier"
                                  data-bs-toggle="offcanvas"
                                  href="#passageSousEscalier"
                                  role="button"
                                  aria-controls="passageSousEscalier">
                            <area shape="rect" coords="343,430,540,816"
                                  alt="Prendre l'escalier"
                                  data-bs-toggle="offcanvas"
                                  href="#passageEscalier"
                                  role="button"
                                  aria-controls="passageEscalier">
                        </map>
                    </div>
                    <div class="col">
                        {% include 'menu/_menu.html.twig' %}
                        {% set escalier = app.session.get('escalier') %}
                        {% set catacombeOpen = app.session.get('catacombeOpen') %}
                        {% if escalier == 10 and catacombeOpen %}
                            <a href="{{ path('app_escalier_coffre') }}">
                                <img class="img-fluid"
                                     src="{{ asset('images/coffre.webp') }}"
                                     alt="photo d'un coffre">
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
    </div>

{% endblock %}
